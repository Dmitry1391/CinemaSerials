<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/siz_red</item>
        <item name="colorPrimaryDark">@color/siz_brown1</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="splashThemeStyle" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:navigationBarColor">@color/siz_red</item>
    </style>

</resources>